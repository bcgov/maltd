<tr>
    <td class="text-center"><input @ref=inputElement type="checkbox" class="form-check-input" checked="@ProjectChecked" @onchange="OnProjectChange" /></td>
    <td>@RowData.ProjectName</td>

    <td class="text-left">
        @if (RowData.Dynamics is not null)
        {
            if (RowData.DynamicsMessage != string.Empty)
            {
                <span style="color:red">@RowData.DynamicsMessage</span>
            }
            else
            {
                <input type="checkbox" class="form-check-input" checked="@RowData.Dynamics" @onchange="OnDynamicsChange" />
            }
        }
        else
        {
            <input type="checkbox" class="form-check-input" disabled="disabled" />
        }
    </td>

    <td class="text-left">
        @if (RowData.SharePoint is not null)
        {
            if (RowData.SharePointMessage != string.Empty)
            {
                <span style="color:red">@RowData.SharePointMessage</span>
            }
            else
            {
                <input type="checkbox" class="form-check-input" checked="@RowData.SharePoint" @onchange="OnSharePointChange" />
            }
        }
        else
        {
            <input type="checkbox" class="form-check-input" disabled="disabled" />
        }
    </td>
</tr>
