@page "/manageusers"
@using BcGov.Jag.AccountManagement.Shared
@inject HttpClient Http

<PageTitle>Get User</PageTitle>

<h1>User Info</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (String.IsNullOrEmpty(user.UserName))
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>bcgov GUID</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>UPN</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@user.Id</td>
                <td>@user.LastName</td>
                <td>@user.FirstName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.UserPrincipalName</td>
            </tr>
        </tbody>
    </table>
}

@code {
    private User user = new User();

    private string username = "philbold";

    protected override async Task OnInitializedAsync()
    {
        user = await Http.GetFromJsonAsync<User>($"api/user?q={username}");
    }
}
